<div class="container-fluid">
<h1>イベント一覧</h1>

<div class="form_group">
  <%= search_form_for @search, url: events_path do |f| %>
    <%= f.search_field :title_cont, placeholder: 'キーワードを入力', required: true %>
    <%# <%= f.select :profile_id, Profile.all.map { |u| [u.gender, u.id] } %> %>
    <%= f.submit %> | <%= link_to "全件表示", action: "index" %>
  <% end %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>投稿者</th>
      <th>詳細</th>
      <th>年齢</th>
      <th>料理ジャンル</th>
      <th>相談ジャンル</th>
      <th>レストランURL</th>
      <th>予算</th>
      <th>エリア</th>
      <th>開始時間</th>
      <th>終了時間</th>
      <th>受付終了時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td class="task_row"><%= event.title %></td>
        <td><%= event.user.profile.nickname %></td>
        <td><%= event.content %></td>
        <td><%= event.user.profile.calc_age %></td>
        <td>
          <% event.genre_tags.each do |genre| %>
          <%= genre.genre.name %>
          <% end %>
        </td>
        <td><%= event.food_category_i18n %></td>
        <td><%= event.restaurant_url %></td>
        <td><%= event.budget_i18n %></td>
        <td>
          <% event.area_tags.each do |area| %>
            <%= area.area.name %>
          <% end %>
        </td>
        <td><%= event.start_at %></td>
        <td><%= event.end_at %></td>
        <td><%= event.check_in_time_i18n %></td>

        <td><%= link_to "詳細", event_path(event.id) %></td>
        <td><%= link_to "編集", edit_event_path(event.id) %></td>
        <td><%= link_to "削除", event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'イベントを登録する', new_event_path, class:"btn btn-default btn-block" %>

</div>
