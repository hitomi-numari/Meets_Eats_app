<div class="container-fluid">

<h1><%= @genre.name %></h1>

<!-- <div class="form_group"> -->
  <%#= search_form_for @search, url: events_path do |f| %>
    <%#= f.search_field :title_cont, placeholder: 'キーワードを入力', required: true %>
    <%#= f.select :profile_id, Profile.all.map { |u| [u.gender, u.id] } %>
    <%#= f.submit %> | <%#= link_to "全件表示", action: "index" %>
  <%# end %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>投稿者</th>
      <th>詳細</th>
      <th>年齢</th>
      <th>料理ジャンル</th>
      <th>相談ジャンル</th>
      <th>レストランURL</th>
      <th>予算</th>
      <th>エリア</th>
      <th>時間</th>
      <th>受付終了時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genre.genre_tags.each do |genre_tag| %>
      <tr>
        <td class="task_row"><%= genre_tag.event.title %></td>
        <td><%= genre_tag.event.user.profile.nickname %></td>
        <td><%= genre_tag.event.content %></td>
        <td><%= genre_tag.event.user.profile.calc_age %></td>
        <td><%= genre_tag.event.food_category_i18n %></td>
        <td>
        <% genre_tag.event.genre_tags.each do |genre| %>
          <%= genre.genre.name %>
        <% end %>
        </td>
        <td><%= link_to genre_tag.event.restaurant_url %></td>
        <td><%= genre_tag.event.budget_i18n %></td>
        <td>
          <%# event.area_tags.each do |area| %>
            <%#= area.area.name %>
          <%# end %>
        </td>
        <td><%= simple_time_start_at(genre_tag.event.start_at) %>~<%= simple_time_end_at(genre_tag.event.end_at) %></td>
        <td><%= genre_tag.event.check_in_time_i18n %></td>

        <td><%= link_to "詳細", event_path(genre_tag.event.id) %></td>
        <td><%= link_to "編集", edit_event_path(genre_tag.event.id) %></td>
        <td><%= link_to "削除", genre_tag.event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'イベントを登録する', new_event_path, class:"btn btn-default btn-block" %>

</div>
