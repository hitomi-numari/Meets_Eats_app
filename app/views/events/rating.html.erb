<div class="container">
  <div class="matching_notice">
    <%= image_tag(@event.user.profile.icon_url, class: "d-block mx-auto" ) %>
      <div class="profile">
        <h5><%=@event.user.profile.nickname %></h5>
      </div>
  </div>
  <div class="complete_container col text-center d-flex flex-column">
    <h3 class="mt-5 mb-3"><%=@event.user.profile.nickname %>さんを<%= t('views.event.make_rate') %></h3>
    <%= form_with(model: @event, local: true) do |form| %>
    <%= form.label t('views.genre.name'), class:"col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <div class="form-check">
          <%#= form.collection_check_boxes(:genre_ids, Genre.all, :id, :name) do |b| %>
            <!-- <div class="custom-control custom-checkbox custom-control-inline"> -->
              <%#= b.label(class:"form-check-label") { b.check_box(class:"form-check-input") + b.text } %>
            <!-- </div> -->
          <%# end %>
        </div>
      </div>
    <% end %>
    <%= link_to t('views.event.back'), my_event_user_path(current_user), class:"mb-5 mt-3" %>
  </div>
</div>
