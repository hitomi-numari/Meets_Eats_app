<!DOCTYPE html>
<html>
  <head>
    <title>MeetsEats</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
            <span class="sr-only">everydayphoto</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">everydayphoto</a>
        </div>

        <div class="collapse navbar-collapse" id="navbarEexample7">
          <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            <% if current_user.profile.nil? %>
              <li>こんにちは、ゲストさん</li>
            <% else %>
              <li>こんにちは、<%= current_user.profile.nickname %>さん</li>
              <li><%= link_to 'イベント一覧', events_path %></li>
              <li><%= link_to "マイページ", my_events_user_path(current_user.id) %></li>
            <% end %>
          <% else %>
            <li><%= link_to 'ログイン', new_user_session_path %></li>
            <li><%= link_to 'サインアップ', new_user_registration_path %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert <%= bootstrap_class_for(key) %>" ><%= value %></div>
    <% end %>
    <%= yield %>
  </div>
  </body>
</html>
